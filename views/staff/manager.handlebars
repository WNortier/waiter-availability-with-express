<div class="row">
    <div class="col-12"></div>
</div>
<div class="row">
    <div class="col-12 center">
        {{#accountInfo}}
        <div class="col-4"></div>
        <div class="col-4 waiterBlock">
            <h3 style="display: inline;">Welcome to the admin portal </h3>
            <h3 style="color:rgb(49, 135, 163); display:inline;">{{username}}</h3>
            {{!-- <form action="/logout/{{email}}" method="GET" style="display:inline;">
                <button type="submit">Logout</button>
            </form> --}}
        </div>
        <div class="col-4"></div>
        {{/accountInfo}}
    </div>
</div>
<div class="row">
    <div class="col-2"></div>
    <div class="col-8 managerBlock">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                {{#accountInfo}}
                <h4 style="display:inline;">Waiter availability for the week </h4>
                <h4 style="color:rgb(49, 135, 163); display:inline;">{{weekStart}} -
                    {{weekEnd}}</h4>
                {{/accountInfo}}
            </div>
            <div class="col-3"></div>
        </div>
        <div class="col-12 center">
            {{#each shiftDays}}
            <div class="weekdayBlockDivs" id="{{style}}">
                <p style="text-align:center;">{{day}}<br>{{count}}</p>
            </div>
            {{/each}}
        </div>
        <div class="row">
            <div class="col-2">
                <div class="weekdayBlockDivsKey"></div>
                <label style="font-size: 1.125rem; font-weight:lighter">Required</label>
                <div class="weekdayBlockDivsKey" id="green"></div>
                <label style="font-size: 1.125rem; font-weight:lighter">Perfect</label>
                <div class="weekdayBlockDivsKey" id="red"></div>
                <label style="font-size: 1.125rem; font-weight:lighter">Extra</label>
            </div>
            <div class="col-10">
                <table class="col-8 managersTable" style="width:70%">
                    <tr>
                        <th>Waiters</th>
                        <th>Shifts Selected</th>
                    </tr>
                    {{#each workDaysInfo}}
                    <tr>
                        <td>{{waiter_username}}</td>
                        <td>{{weekdays}}</td>
                    </tr>
                    {{/each}}
                </table>
                <div class="row">
                    <div class="col-3"></div>
                    <div class="col-6">

                        
                            {{#accountInfo}}
                            <form style="display:inline-block;" action="/resetShifts/{{email}}" method="GET">
                                {{!-- <form action="/reset" method="POST" onsubmit="return confirm('Are you sure you want to reset?');"> --}}
                                <button class="resetButton" style="display:inline-block;" type=" submit">Reset Shifts</button>
                            </form>
                            {{/accountInfo}}
                            <form style="display:inline-block;" action="/resetAccounts" method="POST">
                                {{!-- <form action="/reset" method="POST" onsubmit="return confirm('Are you sure you want to reset?');"> --}}
                                <button class="resetButton" style="display:inline-block;" type=" submit">Reset Accs</button>
                            </form>
                        
                    </div>
                    <div class="col-3"></div>
                </div>

            </div>
            <div class="col-4 left"></div>
        </div>
    </div>

</div>

</div>